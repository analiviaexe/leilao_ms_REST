{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Iniciar todos MS",
            "dependsOrder": "parallel",
            "dependsOn": [
                "MS Lance",
                "MS Leilao",
                "MS Pagamento"
            ],
            "group": "build",
        },
        {
            "label": "MS Leilao",
            "type": "shell",
            "command": "python",
            "args": [
                "ms_leilao.py"
            ],
            "options": {
                "cwd": "${workspaceFolder}/leilao_ms"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new",
                "group": "microservicos"
            }
        },
        {
            "label": "MS Lance",
            "type": "shell",
            "command": "python",
            "args": [
                "ms_lance.py"
            ],
            "options": {
                "cwd": "${workspaceFolder}/leilao_ms"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new",
                "group": "microservicos"
            }
        },
